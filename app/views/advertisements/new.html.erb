<h1>New Advert</h1>

<div class="row">
        <div class="col-md-4">
                <p>Adverts guide</p>
                <ul>
                        <li>Don't believe a word</li>
                        <li>Don't buy it.</li>
                </ul>
        </div>
        <div class="col-md-8">
                <%= form_for @advertisement do |f|  %>
                        <div class="form-group">
                                <%= f.label :title  %>
                                <%= f.text_field :title , class: 'form-control', placeholder: "Enter advert title" %>
                        </div>
                        <div class="form-group">
                                <%= f.label :copy %>
                                <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: "Enter advert copy"  %>
                        </div>
                        <div class="form-group">
                                <%= f.label :price %>
                                <%= f.text_field :price, rows: 8, class: 'form-control', placeholder: "Enter advert price"  %>
                        </div>
                        <div class="form-group">
                                <%= f.submit "Save", class: 'btn btn-success'  %>
                        </div>
                <% end %>
        </div>
</div>
