<h1>All Adverts</h1>
<% @advertisements.each do |advert| %>
        <div class="media">
                <div class="media-body">
                        <h4 class="media-heading">
                                <p><%= link_to "#{advert.price}: #{advert.title}", advert %></p>
                        </h4>
                </div>
        </div>
<% end %>
