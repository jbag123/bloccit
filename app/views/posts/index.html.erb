<h1>All Posts</h1>

<% @posts.each_with_index do |post, index| %>
        <div class="media">
                <div class="media-body">
                        <div class="media-heading">
                                <p>
                                <%=
                                       if index % 5 == 0
                                        link_to 'SPAM'
                                       else
                                        link_to post.title
                                       end
                                %>
                                </p>
                        </div>
                </div>
        </div>
<% end %>
