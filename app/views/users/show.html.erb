<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <% if posts_for_a_user(@user) %>
            <%= pluralize(@user.posts.count, 'post') %>,
          <% else %>
            <%= @user.name %> does not have posts
          <% end %>
          <% if comments_for_a_user(@user) %>
            <%= pluralize(@user.comments.count, 'comment') %>
          <% else %>
          <%= @user.name %> does not have comments
          <% end %>
          <% if favorites_for_a_user(@user) %>
            <%= pluralize(@user.favorites.count, 'favorites') %>
          <% else %>
          <%= @user.name %> does not have favorites
          <% end %>
        </small>
      </div>
    </div>
  </div>
</div>
<h2>Posts</h2>
<%= render @user.posts %>

<h2>Comments</h2>
<%= render @user.comments %>
